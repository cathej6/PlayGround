<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_h"
    tools:context="edu.washington.cathej.playground.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:background="#0000"
            android:layout_marginTop="38dp"
            android:id="@+id/pMode"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="#0000"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pMode"
            android:layout_toStartOf="@+id/pMode"
            android:id="@+id/cMode1" />

        <Button
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="#0000"
            android:id="@+id/cMode2"
            android:layout_alignBottom="@+id/pMode"
            android:layout_toRightOf="@+id/pMode"
            android:layout_toEndOf="@+id/pMode" />
    </RelativeLayout>

</LinearLayout>
